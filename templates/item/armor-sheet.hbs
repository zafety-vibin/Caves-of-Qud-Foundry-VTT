<form class="{{cssClass}} flexcol" autocomplete="off">

  <header class="sheet-header">
    <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
    <div class="header-details">
      <h1 class="charname">
        <input name="name" type="text" value="{{item.name}}" placeholder="Armor Name"/>
      </h1>
    </div>
  </header>

  <section class="sheet-body">

    <div class="form-group">
      <label>Armor Value (AV)</label>
      <input type="number" name="system.av" value="{{system.av}}" data-dtype="Number"/>
    </div>

    <div class="form-group">
      <label>DV Modifier</label>
      <input type="number" name="system.dvModifier" value="{{system.dvModifier}}" data-dtype="Number"/>
    </div>

    <div class="form-group">
      <label>Body Part Slot</label>
      <select name="system.slot">
        <option value="head" {{#if (eq system.slot "head")}}selected{{/if}}>Head</option>
        <option value="face" {{#if (eq system.slot "face")}}selected{{/if}}>Face</option>
        <option value="body" {{#if (eq system.slot "body")}}selected{{/if}}>Body</option>
        <option value="back" {{#if (eq system.slot "back")}}selected{{/if}}>Back</option>
        <option value="arm" {{#if (eq system.slot "arm")}}selected{{/if}}>Arm</option>
        <option value="hand" {{#if (eq system.slot "hand")}}selected{{/if}}>Hand</option>
        <option value="feet" {{#if (eq system.slot "feet")}}selected{{/if}}>Feet</option>
      </select>
    </div>

    <div class="form-group">
      <label>Weight</label>
      <input type="number" name="system.weight" value="{{system.weight}}" data-dtype="Number"/>
    </div>

    <div class="form-group">
      <label>Description</label>
      {{editor system.description target="system.description" button=true owner=owner editable=editable}}
    </div>

  </section>
</form>
